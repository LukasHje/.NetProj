@{
    Layout = "_LoggedInLayout";
}
@model Errand
<nav>
    <ul>
        <li><a class="reports" asp-controller="Coordinator" asp-action="StartCoordinator">Start(Ärenden)</a></li>
        <li><a class="reportAdd" asp-controller="Coordinator" asp-action="ReportCrime">Rapportera brott</a></li>
        <li class="right"><a class="logout" asp-controller="Home" asp-action="Logout">Logga ut</a></li>
    </ul>
</nav><!-- End Nav -->

<div id="content">
    <h2>Rapportera brott</h2>
    <p class="info">Du är inloggad som samordnare</p>

    <p>Fyll i formuläret nedan, alla rutor markerade med stjärna (*) måste fyllas i</p>
    <form asp-controller="Coordinator" asp-action="Validate" method="post">
        <div asp-validation-summery="All"></div>
        <p>
            <input type="hidden" name="isSubmitted" value="true" />
        </p>
        <p>
            <label asp-for="Place">Var har brottet skett någonstans?</label><br />
            <input asp-for="Place" />
            <span asp-validation-for="Place"></span>*
        </p>
        <p>
            <label asp-for="TypeOfCrime">Vilken typ av brott?</label><br />
            <input asp-for="TypeOfCrime" />
            <span asp-validation-for="TypeOfCrime"></span>*
        </p>
        <p>
            <label asp-for="DateOfObservation">När upptäckte du brottet?</label><br />
            <input asp-for="DateOfObservation" />
            <span asp-validation-for="DateOfObservation"></span>*
        </p>
        <p>
            <label asp-for="InformerName">Ditt namn: (för- och efternamn)</label><br />
            <input asp-for="InformerName" />
            <span asp-validation-for="InformerName"></span>*
        </p>
        <p>
            <label asp-for="InformerPhone">Din telefon:</label><br />
            <input asp-for="InformerPhone" />
            <span asp-validation-for="InformerPhone"></span>*
        </p>
        <p>
            <span class="label">Beskriv din observation<br /> (ex. namn på misstänkt person):</span><br />
            <textarea name="observation" rows="5" cols="16"></textarea>
        </p>
        <p>
            <input class="button" type="submit" value="Skicka in" />
        </p>
    </form>

    <footer>
        &copy; Småstads Kommun All rights reserved.
    </footer>
</div><!-- End Content -->
